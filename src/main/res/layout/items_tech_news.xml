<!-- item_tech_news.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/techNewsTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tech News Title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/techNewsAuthorTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Author"
        android:textSize="16sp"
        android:padding="8dp"/>


</LinearLayout>
